#!/usr/bin/env python3

import sys
import os
sys.path.append(os.path.expanduser('~') + '/bin/python-modules')
import create


def get_args():
    """ Get command line arguments """
    import argparse
    parser = argparse.ArgumentParser()
    parser.add_argument("filename")
    parser.add_argument("-t", "--template", type=str)
    return parser.parse_args()


def main(args):
    """ Main function """
    create.create(args.filename, force_template=args.template)
    create.open_file_in_editor(args.filename)
    return 0


if __name__ == '__main__':
    sys.exit(main(get_args()))
