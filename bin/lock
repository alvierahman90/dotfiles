#!/usr/bin/env bash

/usr/bin/playerctl pause

case $1 in
	"i3lock")
		icon="$HOME/.lock_icon.png"
		tmpbg='/tmp/screen.png'

		(( $# )) && { icon=$1; }

		scrot "$tmpbg"
		convert "$tmpbg" -scale 20% -scale 500% "$tmpbg"
		convert "$tmpbg" "$icon" -gravity center -composite \
			-matte "$tmpbg"
		i3lock -u -i "$tmpbg" --clock
		;;
	"cinnamon")
		cinnamon-screensaver-command --activate \
			--away-message "muffinssssssssssssss"
		;;
	"i3lockfancy")
		/home/alvie/Documents/projects/i3lock-fancy/lock \
			-f SFNS-Display-Ultralight \
			##--clock
		;;
	*)
		i3-nagbar -t warning \
			-m "\$lockstyle set to '$lockstyle', not a valid option"
		;;
esac

